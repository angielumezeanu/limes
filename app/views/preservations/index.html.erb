<p id="notice"><%= notice %></p>

<h1 class="caption">Preservation Status</h1>
<%= link_to 'New Preservation Status', new_preservation_path %><br/><br/>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Preservation Status</th>
    </tr>
  </thead>

  <tbody>
    <% @preservations.each do |preservation| %>
      <tr>
        <td><%= link_to 'Show', preservation %></td>
        <td><%= link_to 'Edit', edit_preservation_path(preservation) %></td>
        <td><%= link_to 'Destroy', preservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= preservation.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

