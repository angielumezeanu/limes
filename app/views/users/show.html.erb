

<h4>Details of user <%= @user.email %></h4>
<table style="border: 0px;">
  <tr>
  <td><b>Email:</b></td>
  <td><%= @user.email %></td>
</tr>

  <tr>
    <td><b>Username:</b></td>
    <td><%= @user.username %></td>
  </tr>

  <tr>
    <td><b>Role:</b></td>
    <td><%= @user.role %></td>
  </tr>

<tr>
  <td><b>Created at:</b></td>
  <td><%= @user.created_at.strftime("%d/%m/%Y %H:%M") %></td>
 </tr>
</table>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>