<p id="notice"><%= notice %></p>

<h1 class="caption">List of Site Categories</h1>
<%= link_to 'New Category', new_scategory_path %><br/><br/>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Site Category</th>
    </tr>
  </thead>

  <tbody>
    <% @scategories.each do |scategory| %>
      <tr>
        <td><%= link_to 'Show', scategory %></td>
        <td><%= link_to 'Edit', edit_scategory_path(scategory) %></td>
        <td><%= link_to 'Destroy', scategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= scategory.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_scategory_path %>
